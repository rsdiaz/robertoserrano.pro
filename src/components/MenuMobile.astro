---
import OutLinedButton from "./OutLinedButton.astro";
import Social from "./Social.astro";
---

<section class="lg:hidden" x-data="{ open: false }">
    <nav class="fixed right-2 top-2 z-50">
      <button class="text-yellow-500 w-10 h-10 relative focus:outline-none bg-transparent" @click="open = !open">
          <span class="sr-only">Open main menu</span>
          <div class="block w-5 absolute left-1/2 top-1/2   transform  -translate-x-1/2 -translate-y-1/2">
              <span aria-hidden="true" class="block absolute h-0.5 w-5 bg-current transform transition duration-500 ease-in-out" :class="{'rotate-45': open,' -translate-y-1.5': !open }"></span>
              <span aria-hidden="true" class="block absolute  h-0.5 w-5 bg-current   transform transition duration-500 ease-in-out" :class="{'opacity-0': open } "></span>
              <span aria-hidden="true" class="block absolute  h-0.5 w-5 bg-current transform  transition duration-500 ease-in-out" :class="{'-rotate-45': open, ' translate-y-1.5': !open}"></span>
          </div>
      </button>
    </nav>
    <div class="w-full h-full flex flex-col justify-center bg-slate-950 fixed z-40" x-show="open" x-transition>
      <h1 class="text-5xl text-center font-[Poppins] font-black">
        <span
          class="animate-text bg-gradient-to-r from-pink-500 via-yellow-200 to-pink-500 bg-clip-text text-transparent text-5xl"
        >
          Roberto Serrano
        </span>
      </h1>
      <h2 class="text text-center pt-2 font-[Poppins] overflow-hidden">
        Software Engineer
      </h2>
      <div class="flex justify-center content-center mt-4">
        <Social />
      </div>
  
      <div class="flex gap-4 justify-center mt-12">
        <OutLinedButton href="/" value="Home" />
        <OutLinedButton href="/blog" value="Blog" />
        <OutLinedButton href="/sobre-mi" value="Sobre mi" />
      </div>
    </div>
</section>